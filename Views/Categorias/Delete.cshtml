@model WebMasterIdentity.Models.Categoria

@{
    ViewData["Title"] = "Eliminar";
}

<h4 class="text-center">Eliminar Categoria:  @Html.DisplayFor(model => model.NombreCategoria)</h4>
<hr />


<div class="text-center">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
