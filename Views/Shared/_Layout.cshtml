<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] WebMaster </title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/modal.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <header>
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" asp-area="" asp-controller="Administracion" asp-action="DashBoard">
                @ViewData["Title"]
            </a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar-->
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">
                                <i class="fas fa-book-open"></i>
                                Administracion Principal
                            </div>
                            <a class="nav-link" asp-area="" asp-controller="Ventas" asp-action="Index">
                               <div class="sb-nav-link-icon"></div>
                                Ventas
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="Tiendas" asp-action="Index">
                               <div class="sb-nav-link-icon"></div>
                                Tiendas
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="Productos" asp-action="Index">
                               <div class="sb-nav-link-icon"></div>
                                Productos
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="Categorias" asp-action="Index">
                               <div class="sb-nav-link-icon"></div>
                                Categorias
                            </a>
                            <div class="sb-sidenav-menu-heading">
                                <i class="fas fa-user fa-fw"></i>
                                Cuenta
                                <partial name="_LoginPartial.cshtml"/>
                               <a class="nav-link" asp-area="Identity" asp-page="/Account/Register"> Crear cuenta </a>
                            </div>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Creado Por:</div>
                        &copy; 2021 - FrancoGhost Dev
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <br />
                        <div class="card mb-4">
                            <div class="card-body">
                                <main role="main" class="pb-3">
                                    @RenderBody()
                                </main>
                            </div>
                        </div>
                    </div>
                </main>
        </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
    <script src="~/https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
