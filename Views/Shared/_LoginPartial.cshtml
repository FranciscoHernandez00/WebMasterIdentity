@using Microsoft.AspNetCore.Identity
@using WebMasterIdentity.Areas.Identity.Data

@inject SignInManager<WebMasterIdentityUser> SignInManager
@inject UserManager<WebMasterIdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link" title="Manage">@UserManager.GetUserName(User)</a>
        </li>
        
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("DashBoard", "Administracion", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link">Cerrar Sesión</button>
            </form>
        </li>
    }
    else
    {

    }
</ul>
