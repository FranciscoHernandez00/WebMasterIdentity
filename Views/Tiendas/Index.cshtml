@model IEnumerable<WebMasterIdentity.Models.Tienda>

@{
    ViewData["Title"] = "Tiendas";
}

<h4 class="text-center"> Lista Tiendas </h4>
<hr />
<div class="card mb-4" id="Tarjeta">

    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreTienda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreTienda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-light" asp-route-id="@item.TiendaId">Editar</a>
                            <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.TiendaId">Detalles</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.TiendaId">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<p>
    <a class="btn btn-primary btn-block" asp-action="Create">Crear Tienda</a>
</p>

